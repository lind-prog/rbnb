<div class="form-wrapper">
  <div class="form-container">
    <h1>Create a New Offer ðŸŽ‰</h1>

    <%= form_with model: @offer, local: true, multipart: true do |form| %>
      <div class="form-group">
        <%= form.label :title, "Offer Title" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :number_of_fan, "Number of Fans" %>
        <%= form.number_field :number_of_fan, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :activity, "Activity" %>
        <%= form.text_field :activity, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :price, "Price" %>
        <%= form.number_field :price, step: 1, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :enthusiasm_level, "Level of Enthusiasm" %>
        <%= form.select :enthusiasm_level, options_for_select(["Hysteric", "Devoted", "Modest"]), {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :image, "Upload Image" %>
        <%= form.file_field :image, class: "form-control" %>
      </div>

      <div class="form-submit">
        <%= form.submit "Create Offer", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
