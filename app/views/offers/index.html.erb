<!-- app/views/offers/index.html.erb -->
<h1 class="text-center mt-5 mb-4">✨ Star for a Day ✨</h1>

<div class="container">
  <!-- Barre de recherche -->
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: offers_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query], class: "form-control me-2", placeholder: "Search for offers..." %>
        <%= submit_tag "Search", name: nil, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <!-- Lien pour proposer une nouvelle offre -->
  <div class="ml-3 mb-3 col-12 text-end">
    <%= link_to 'Propose a fan performance', new_offer_path, class: 'btn btn-primary mb-3' %>
  </div>

  <!-- Liste des offres -->
  <div class="row">
    <% if @offers.present? %>
      <% @offers.each do |offer| %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <!-- Bloc avec le texte et les informations -->
            <div class="card-body">
              <h5 class="card-title"><%= link_to offer.title, offer_path(offer), class: "text-dark" %></h5>
            <%= offer.image.attached? ? cl_image_tag(offer.image.key, class: "card-img-top", alt: "Offer Image") : image_tag("default-offer", class:"card-img-top", alt: 'Offer image') %>
            <div class="card-body ">
              <h5 class="card-title"><%= link_to offer.title, offer_path(offer), class: "text-dark stretched-link" %></h5>
              <p class="card-text"><strong>Number of Fans:</strong> <%= offer.number_of_fan %></p>
              <p class="card-text"><strong>Enthusiasm Level:</strong> <%= offer.enthusiasm_level %></p>
              <p class="card-text"><strong>Price:</strong> <%= number_to_currency(offer.price, unit: "€") %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center">No offers found.</p>
    <% end %>
  </div>
</div>
