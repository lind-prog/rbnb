<div class="container mt-5">

  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <h1 class="display-4 text-center"><%= @offer.title %></h1>
      <div class="banner">
        <%= image_tag @offer.image_url, class: "img-fluid w-100", alt: "Offer Banner" %>
      </div>
      <hr>
      <div class="card p-4 shadow-sm">
        <h2 class = "text-center pb-3 fst-italic"> What does the service offer?</h2>
        <p class="lead"><br> 👩🏾‍🤝‍👨🏼 <strong>Number of fans:</strong> <%= @offer.number_of_fan %></p>
        <p class="lead"> 🥳 <strong>Enthusiasm level:</strong> <%= @offer.enthusiasm_level %></p>
        <p class="lead"> 📸 <strong>Activity:</strong> <%= @offer.activity %></p>
        <p class="lead"> 💸 <strong>Price:</strong> <%= number_to_currency(@offer.price, unit: "€") %></p>
        <p class="lead"> 📍 <strong>Localisation:</strong> <%= @offer.localisation %></p>
        <p class="lead"><br><strong>Description:</strong> <%= @offer.description %></p>
        <div class="text-center p-3">
          <br><%= link_to "Book this performance", new_offer_booking_path(@offer), class: "btn btn-info btn-lg" %>
        </div>
      </div>

      <div class="col-12 text-end m-4">
          <%= link_to "Back to offers", offers_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
