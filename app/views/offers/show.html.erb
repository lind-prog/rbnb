<!-- Navbar -->
<nav class="navbar">
  <a href="#" class="navbar-brand">StarForADay</a>

  <div class="navbar-avatar">
    <div class="avatar small">
      <img src="https://s2.qwant.com/thumbr/474x266/c/c/f63fdd0496a45567f1b8f0b26a7712509b75fcfb9f06e27d9d6eeb81a45352/th.jpg?u=https%3A%2F%2Ftse.mm.bing.net%2Fth%3Fid%3DOIP.CQlHRmvFeusieHYXdPCYRAHaEK%26pid%3DApi&q=0&b=1&p=0&a=0" alt="User Avatar">
      <div class="status online"></div> <!-- Ajuster la classe en fonction du statut de l'utilisateur -->
    </div>
  </div>
</nav>

<div class="container mt-5">

  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <h1 class="display-4 text-center"><%= @offer.title %></h1>
      <div class="banner">
         <%= @offer.image.attached? ? cl_image_tag(@offer.image.key, class: "card-img-top", alt: "Offer Image") : image_tag("default-offer", class:"card-img-top", alt: 'Offer image') %>
      </div>
      <hr>
      <div class="card p-4 shadow-sm">
        <h2 class = "text-center pb-3"> What does the service offer?</h2>
        <p class="lead"> 👩🏾‍🤝‍👨🏼 <strong>Number of fans:</strong> <%= @offer.number_of_fan %></p>
        <p class="lead"> 🥳 <strong>Enthusiasm level:</strong> <%= @offer.enthusiasm_level %></p>
        <p class="lead"> 📸 <strong>Activity:</strong> <%= @offer.activity %></p>
        <p class="lead"> 💸 <strong>Price:</strong> <%= number_to_currency(@offer.price, unit: "€") %></p>
        <div class="text-center pt-3">
          <%= link_to "Book this performance", new_offer_booking_path(@offer), class: "btn btn-info btn-lg" %>
        </div>
      </div>

      <div class="col-12 text-end mt-4">
          <%= link_to "Back to offers", offers_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
