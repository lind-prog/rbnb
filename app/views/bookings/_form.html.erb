<!-- app/views/bookings/new.html.erb -->
<div class="container booking-container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card booking-card">
        <div class="card-body booking-card-body">
          <%= simple_form_for [@offer, @booking], local: true do |form| %>
            <div class="mb-3">
              <%= form.input :date,
                as: :string,
                input_html: { class: "form-control booking-form-control", data: { controller: "datepicker" } } %>
            </div>

            <div class="mb-3">
              <%= form.input :additional_requests,
                as: :text,
                label: "Additional Requests",
                input_html: { class: "form-control booking-form-control", placeholder: "Enter any special requests or notes here..." } %>
            </div>

            <div class="d-grid">
              <%= form.submit 'Confirm Booking', class: "btn btn-outline-info booking-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
